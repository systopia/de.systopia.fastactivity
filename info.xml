<?xml version="1.0"?>
<extension key="de.systopia.fastactivity" type="module">
  <file>fastactivity</file>
  <name>CiviCRM Fast Activities</name>
  <description>High Performance Activity Features</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>endres@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.fastactivity</url>
    <url desc="Documentation">https://docs.civicrm.org/fastactivity/en/latest/</url>
    <url desc="Support">https://github.com/systopia/de.systopia.fastactivity/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-06-24</releaseDate>
  <version>1.4.0-beta3</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.38</ver>
  </compatibility>
  <comments>Developed by Matthew Wire and SYSTOPIA</comments>
  <civix>
    <namespace>CRM/Fastactivity</namespace>
    <format>25.01.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.3</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <upgrader>CiviMix\Schema\Fastactivity\AutomaticUpgrader</upgrader>
</extension>
